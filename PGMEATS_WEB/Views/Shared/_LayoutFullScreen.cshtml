<body id="view-fullscreen" class="fixed-header @ViewBag.PageClass @Settings.CurrentTheme">
  
    @*@Html.Partial("_Header")*@
    @*@{Html.RenderAction("SideMenu", "Menu");}*@
    <div style="width: 100%; height: 100%; padding: 0; margin: 0;">
        @RenderBody()
    </div>
    @{ Html.RenderPartial("_Scripts", RenderSection("pagespecific", false)); }
    <script>
        function go_full_screen() {
            var elem = document.documentElement;
            if (elem.requestFullscreen) {
                elem.requestFullscreen();
            } else if (elem.msRequestFullscreen) {
                elem.msRequestFullscreen();
            } else if (elem.mozRequestFullScreen) {
                elem.mozRequestFullScreen();
            } else if (elem.webkitRequestFullscreen) {
                elem.webkitRequestFullscreen();
            }
        }

        //setTimeout(function () {
        var xPathRes = document.evaluate('//div[1]/a[1]', document, null, XPathResult.FIRST_ORDERED_NODE_TYPE, null);
        xPathRes.singleNodeValue.click();
        //}, 5000);

    </script>
    <script type="text/javascript">
        history.pushState(null, null, $(location).attr('href'));
        window.addEventListener('popstate', function () {
            history.pushState(null, null, $(location).attr('href'));
        });
    </script>
   
</body>

