        function answerCheck(t, e) {
            if (t.value != "") {
                if (t.value.length == 1) {
                    if (e.keyCode == 8) {
                        if (t.id == "txtmlt1") {
                            $("#txtmlt1").val("")
                        } else if (t.id == "txtmlt2") {
