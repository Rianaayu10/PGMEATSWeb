                        }
                        return
                    }
                }
                $('#InsertData').prop("disabled", false);
                $('#UpdateData').prop("disabled", false);
                return
            } else {
                var evt = e || window.event;
                var charCode = evt.which || evt.keyCode;
                var charStr = String.fromCharCode(charCode);
                var result = /[a-zA-Z0-9_-]/.test(charStr);


                if (result == true) {
                    $('#InsertData').prop("disabled", false);
                    $('#UpdateData').prop("disabled", false);
