                }

                var txt1 = $("#txtmlt1").val();
                var txt2 = $("#txtmlt2").val();
                var txt3 = $("#txtmlt3").val();
                var txt4 = $("#txtmlt4").val();
                if (txt1 == "" && txt2 == "" && txt3 == "" && txt4 == "") {
